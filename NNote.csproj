  <ItemGroup>
    <None Remove="NNote_Icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin\Release\net8.0-windows\NNote_Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="NNote_Icon.png" />
  </ItemGroup>

</Project>
